{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Kitchen_Node",
    "type": "object",
    "properties": {
      "id": { "type": "string" },
      "ip": { "type": "string" },
      "temperature": { "type": "number", "minimum": 0, "maximum": 100 },
      "humidity": { "type": "number", "minimum": 0, "maximum": 100 },
      "gas_leak": { "type": "boolean" },
      "motion_detected": { "type": "boolean" },
      "light_level": { "type": "integer", "minimum": 0, "maximum": 1000 },
      "timestamp": { "type": "string" },
      "type": { "type": "string" }
    },
    "required": ["id", "ip", "light_level", "timestamp", "type"]
  }
  